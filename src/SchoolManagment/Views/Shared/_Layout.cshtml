<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>@ViewData["Title"] - BullWorth</title>
  <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
  <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
  @RenderSection("RequiredCss", false)
  @RenderSection("icons", false)
</head>

<body class="d-flex flex-column vh-100">

  <nav class="navbar navbar-alpha navbar-expand-md bg-blue" data-position="absolute">
    <div class="container">
      <!-- Navbar seguido de um container, elementos nao sao flex items-->

      <a class="navbar-brand text-light" asp-controller="Home" asp-action="Index">
        <img src="~/img/bw-brand.png" alt="Bullworth logo">
        BullWorth Academy
      </a>

      <button class="navbar-toggler text-light" type="button" data-bs-toggle="collapse"
        data-bs-target="#navbarSupportedContent">
        <span class="navbar-toggler-icon"></span>
        Menu
      </button>

      <div class="navbar-collapse collapse" id="navbarSupportedContent">
        <ul class="navbar-nav">

          <li class="nav-item">
            <a class="nav-link" asp-controller="Home" asp-action="Index">Home</a>
          </li>

          <li class="nav-item">
            <a href="#" class="nav-link">Courses</a>
          </li>

          <li class="nav-item">
            <a href="#" class="nav-link disabled">About</a>
          </li>

          <li class="nav-item">
            <a href="#" class="nav-link disabled">Contact</a>
          </li>

        </ul>
      </div>

      <div>
        <a class="btn btn-primary rounded-pill px-3 contactUs" data-contactUs>Contact Us</a>
      </div>

    </div>
  </nav>

  <main role="main" class="pb-3">
    @RenderBody()

    @if (TempData.ContainsKey("Notifications"))
    {
      var notification = TempData.GetJson<Notification>("Notifications");

      <div class="toast-container float-notifications">
        <div class="toast">
          <div class="toast-header">
            <span class="bi-square-fill text-@notification.Type me-2"></span>
            <strong class="me-auto">@notification.Title</strong>
            <small class="text-muted">@notification.Time.GetRelativeTime()</small>
            <button type="button" class="btn-close" data-bs-dismiss="toast"></button>
          </div>

          <div class="toast-body">
            @notification.Message
          </div>
        </div>
      </div>
    }
  </main>

  <footer class="footer border-top mt-auto py-3 text-muted">
    <div class="container">
      <p class="text-center">
        <span>&copy; 2022 - BullWorth Academy</span>
      </p>
    </div>
  </footer>

  <script src="~/lib/jquery/dist/jquery.min.js"></script>
  <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
  <script src="~/js/site.js" asp-append-version="true"></script>
  @RenderSection("Scripts", false)
</body>

</html>
