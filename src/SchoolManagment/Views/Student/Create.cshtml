@using SchoolManagment.Enums
@model CreateStudentViewModel
@{
  ViewData["Title"] = "Add student";
}

<div class="container py-3">
  <div class="border-bottom mb-4 pb-2 d-flex align-items-center">
  
    <a asp-action="Index" class="display-6 me-4">
      <span class="bi-arrow-left"></span>
    </a>
  
    <h1 class="display-4">Student Enrollment</h1>
  
  </div>
  
  <div class="row">
  
    <div class="col-3">
      <img src="~/img/student-icon.png" alt="student icon">
    </div>
  
    <div class="col-9">
      <form asp-action="Create">
        <div class="row">
  
          <div class="col-6 mb-3">
            <label class="form-label ms-2" asp-for="FirstName">First Name</label>
            <input class="form-control" asp-for="FirstName" autocomplete="off">
            <span asp-validation-for="FirstName"></span>
          </div>
  
          <div class="col-6 mb-3">
            <label class="form-label ms-2" asp-for="LastName">Last Name</label>
            <input class="form-control" asp-for="LastName" autocomplete="off">
            <span asp-validation-for="LastName"></span>
          </div>
  
          <div class="col-8 mb-3">
            <label class="form-label ms-2" asp-for="Email">Student Email</label>
            <input class="form-control" asp-for="Email" autocomplete="off">
            <span asp-validation-for="Email"></span>
          </div>
  
          <div class="col-4 mb-3">
            <label class="form-label ms-2" asp-for="Phone">Phone</label>
            <input class="form-control" asp-for="Phone">
            <span asp-validation-for="Phone"></span>
          </div>
  
          <div class="col-3 mb-3">
            <label class="form-label ms-2" asp-for="Birthdate">Birthdate</label>
            <input class="form-control" min="1950-01-01" max="@(DateTime.Now.Date.ToString("yyyy-MM-dd"))" asp-for="Birthdate">
            <span asp-validation-for="Birthdate"></span>
          </div>
  
          <div class="col-5 mb-3">
            <label class="form-label ms-2" asp-for="GradeLevel">Grade Level</label>
            <select class="form-select" asp-items="Html.GetEnumSelectList<GradeLevels>()" asp-for="GradeLevel">
              <option value="">Choose one grade level</option>
            </select>
            <span asp-validation-for="GradeLevel"></span>
          </div>
  
          <div class="col-12 mt-5">
            <div class="row justify-content-end">
  
              <div class="col-2 d-grid">
                <a class="btn btn-secondary" asp-action="Index">Back</a>
              </div>
  
              <div class="col-2 d-grid">
                <button class="btn btn-primary" type="submit">Confirm</button>
              </div>
  
            </div>
          </div>
  
        </div>
  
      </form>
    </div>
  
  </div>
</div>


@section icons {
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.3/font/bootstrap-icons.css">
}